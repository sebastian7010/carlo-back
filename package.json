{
  "scripts": {
    "build": "esbuild src/server.ts --bundle --platform=node --target=node20 --outfile=dist/server.js",
    "start": "node dist/server.js",
    "dev": "node --watch dist/server.js",
    "dev:build": "esbuild src/server.ts --bundle --platform=node --target=node20 --outfile=dist/server.js --watch",
    "postinstall": "prisma generate",
    "migrate:deploy": "prisma migrate deploy",
    "start:prod": "npm run migrate:deploy && node dist/server.js"
  },
  "dependencies": {
    "@nestjs/config": "^4.0.2",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@prisma/client": "^6.19.1",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "openai": "^6.15.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^6.19.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "esbuild": "^0.27.1",
    "ts-node": "^10.9.2"
  }
}
